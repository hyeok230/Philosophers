# =============================================================================
# Command Variables
# =============================================================================

CC 			= gcc
CFLAGS		= -Wall -Wextra -Werror
NAME		= philo
# =============================================================================
# File Variables
# =============================================================================

INCLUDE = -Iinclude/
FOLDER	= ./srcs/

SRCS	= main.c\
			ft_utils.c\

			

SOURCES =  $(addprefix $(FOLDER), $(SRCS))

OBJECTS = $(SOURCES:%.c=%.o)

# =============================================================================
# Target Generating
# =============================================================================

all: $(NAME)

%.o: %.c
	${CC} ${CFLAGS} $(INCLUDE) -c $< -o $@

$(NAME): $(OBJECTS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJECTS)

clean:
	rm -f $(OBJECTS)
	rm -f $(OBJECTS_BONUS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
